{
  "name": "face-analysis",
  "version": "1.0.0",
  "description": "Face Analysis Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.faceanalysis.app",
    "productName": "Face Analysis",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "static/**/*",
      "templates/**/*",
      "main.py",
      "faces.db",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": ".venv",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "static/icon.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "static/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "static/icon.png"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3"
  }
} 